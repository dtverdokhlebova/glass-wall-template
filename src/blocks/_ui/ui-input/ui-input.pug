mixin ui-input(id, mods, type)
  -
    const baseName = 'ui-input'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  if type === 'file'
    .ui-input.ui-input--file(class=allMods data-input-file='')
      .ui-input__control
        input(id=id type='file')&attributes(attributes)
        label(for=id)
          .ui-input__icon
            +svg('icon_attach')
          | Прикрепить проект
      .ui-input__files
  else
    .ui-input(class=allMods)
      input(id=id type='text')&attributes(attributes)
